<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:id="@+id/llFondoImagen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_fade"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llFondoNegro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.3"
            android:background="@color/black"
            android:orientation="vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLogoLogin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18">

        <ImageView
            android:id="@+id/ivLogoLogin1"
            android:layout_width="@dimen/anchoIconPrincipalRegistroXL"
            android:layout_height="@dimen/altoIconPrincipalRegistroXL"
            android:layout_gravity="center"
            android:alpha="0.06"
            android:src="@drawable/iconprincipal"
            android:transitionName="logoImageTrans" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.46">

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="@dimen/anchoInputRegistro"
            android:layout_height="@dimen/altoInputRegistro"
            android:layout_marginBottom="20dp"
            android:background="@drawable/input"
            android:hint="Apodo"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textColorHint="#000000"
            android:textSize="@dimen/textInputRegistro" />


        <EditText
            android:id="@+id/etEmail"
            android:layout_width="@dimen/anchoInputRegistro"
            android:layout_height="@dimen/altoInputRegistro"
            android:layout_marginBottom="20dp"
            android:background="@drawable/input"
            android:hint="Correo Electrónico"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"
            android:textColorHint="#000000"
            android:textSize="@dimen/textInputRegistro" />

        <EditText
            android:id="@+id/etPass"
            android:layout_width="@dimen/anchoInputRegistro"
            android:layout_height="@dimen/altoInputRegistro"
            android:layout_marginBottom="20dp"
            android:background="@drawable/input"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textColorHint="#000000"
            android:textSize="@dimen/textInputRegistro" />

        <EditText
            android:id="@+id/etPass2"
            android:layout_width="@dimen/anchoInputRegistro"
            android:layout_height="@dimen/altoInputRegistro"
            android:layout_marginBottom="30dp"
            android:background="@drawable/input"
            android:hint="Repita Contraseña"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textColorHint="#000000"
            android:textSize="@dimen/textInputRegistro" />

        <TextView
            android:id="@+id/tvErrorPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text=" "
            android:textColor="@color/red"
            android:textSize="@dimen/textSizeRegistro" />

        <Button
            android:id="@+id/btRegistro"
            android:layout_width="@dimen/anchoBotonRegistro"
            android:layout_height="@dimen/altoBotonRegistro"
            android:layout_marginBottom="40dp"
            android:background="@drawable/btn_redondeado_amarillo"
            android:elevation="@dimen/elevationBotonRegistro"
            android:text="Registrate"
            android:textSize="@dimen/textBotonRegistro" />

        <TextView
            android:id="@+id/tvCuentaActiva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:gravity="end"
            android:text="¿Ya Tienes Cuenta? Click Aqui"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeRegistro" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLogoLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98"
        app:layout_constraintHorizontal_bias="0.06">

        <ImageView
            android:id="@+id/ivLogoLogin"
            android:layout_width="@dimen/anchoIconPrincipalLoginXS"
            android:layout_height="@dimen/altoIconPrincipalLoginXS"
            android:layout_gravity="center"
            android:alpha="0.8"
            android:src="@drawable/iconprincipal"
            android:transitionName="logoImageTrans" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>